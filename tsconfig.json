{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2017",
        "noImplicitAny": true,
        "strict": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "strictNullChecks": true,
        "noUnusedLocals": false,
        "forceConsistentCasingInFileNames": true,
        "sourceMap": true,
        "watch": true,
        "baseUrl": "./src/",
        "outDir": "./dist/",
        "types": [
            "node"
        ],
        "paths": {
            "@api": ["framework/api"],
            "@core/*": ["framework/*"],
            "@bot/*": ["bot/*"],
            "@src/*": ["*"],
            "@libraries/*": [
                "bot/libraries/*",
                "framework/lib/*"
            ]
        },
        "newLine": "LF"
    },
    "compileOnSave": true,
    "exclude": [
        "test",
        "node_modules"
    ]
}
